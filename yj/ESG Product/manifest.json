{
    "manifest_version": 3,
    "name": "ESG Product",
    "version": "1.0",
    "permissions": ["tabs","activeTab", "scripting"],
    "host_permissions": [
        "https://search.shopping.naver.com/catalog/*"
      ],
    "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
    },
    "action": {
      "default_popup": "html/popup.html",
      "default_icon": {
        "16": "/images/16.png",
        "48": "/images/48.png",
        "128": "/images/128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://search.shopping.naver.com/catalog/*"],
        "js": ["scripts/content.js"]
      }
    ],
    "background": {
      "service_worker": "scripts/background.js"
    }
  }
  